@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Movies Streaming Availability";
    var titleFilter = ViewBag.TitleFilter as string;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="StreamingAvailability" method="get">
    <div class="form-group">
        <label for="titleFilter">Filter by Title:</label>
        <input type="text" id="titleFilter" name="titleFilter" value="@titleFilter" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Movie Title</th>
            <th>Number of Streamings</th>
            <th>Streamings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.MovieId" target="_blank">@item.Title</a></td>
                <td>@item.StreamingCount</td>
                <td>@item.Streamings</td>
            </tr>
        }
    </tbody>
</table>
