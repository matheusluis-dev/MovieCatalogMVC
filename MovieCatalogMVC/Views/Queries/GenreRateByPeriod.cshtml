@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Genre Rate By Period";

    var year = ViewBag.Year as int?;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="GenreRateByPeriod" method="get">

    <div class="form-group">
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" class="form-control" min="1900" max="2100" value="@year" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Genre</th>
            <th>Average Rating</th>
            <th>Number of Movies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Genre</td>
                <td>@item.AverageRating.ToString("0.00")</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>
